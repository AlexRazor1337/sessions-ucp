{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "plugins": [
        "security",
        "node"
    ],
    "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:security/recommended"],
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eqeqeq": ["error", "always"],
        "node/no-unsupported-features/es-syntax": [ "off" ]
    }
}
